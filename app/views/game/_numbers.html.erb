        <% else %>
          <%= content_tag :span, 'NO', class: 'text-red-400' %>
        <% end %>
      </h3>
    </div>

    <div>
      <h2 class="text-xl font-medium">
        Tiempo
      </h2>
      <h3 class="text-center text-2xl font-extrabold text-red-400">
