  <div class="flex flex-row space-x-24">
    <div>
      <h2 class="text-xl font-medium">
        Movimientos
      </h2>
      <h3 class="text-center text-2xl font-extrabold text-sky-600">
        <%= game.movements %>
      </h3>
    </div>

    <div>
      <h2 class="text-xl font-medium">
        Muertes
      </h2>
      <h3 class="text-center text-2xl font-extrabold text-red-400">
        <%= game.killed %>
      </h3>
    </div>

    <div>
      <h2 class="text-xl font-medium">
        Encontr√≥ Bandera
      </h2>
      <h3 class="text-center text-2xl font-extrabold ">
